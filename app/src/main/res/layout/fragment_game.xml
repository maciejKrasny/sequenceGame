<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".GameFragment">
    <TextView
            android:text="@string/curScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView2" android:textStyle="bold"
            android:textColor="@android:color/darker_gray" android:textSize="18sp" android:gravity="center"
            android:paddingTop="10dp" android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/curScoreTextView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textStyle="bold"
            android:textColor="@android:color/background_dark" android:textSize="18sp"/>
    <GridLayout
            android:layout_width="395dp"
            android:layout_height="308dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/curScoreTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="15dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="15dp" android:id="@+id/gridLayout">
        <ImageView
                android:src="@drawable/kenny_mccormick"
                android:layout_width="100dp"
                android:layout_height="100dp" android:id="@+id/image3" android:layout_row="1"
                android:layout_column="0" android:layout_marginLeft="20dp"
                android:background="@drawable/border" android:layout_marginBottom="2dp" android:layout_marginTop="2dp"/>
        <ImageView
                android:src="@drawable/kenny_mccormick"
                android:layout_width="100dp"
                android:layout_height="100dp" android:id="@+id/image4" android:layout_row="1"
                android:layout_column="1" android:layout_marginRight="15dp" android:layout_marginLeft="15dp"
                android:background="@drawable/border" android:layout_marginBottom="2dp" android:layout_marginTop="2dp"/>
        <ImageView
                android:src="@drawable/kenny_mccormick"
                android:layout_width="100dp"
                android:layout_height="100dp" android:id="@+id/image5" android:layout_row="1"
                android:layout_column="2" android:layout_marginRight="15dp" android:layout_marginLeft="10dp"
                android:background="@drawable/border" android:layout_marginBottom="2dp" android:layout_marginTop="2dp"/>
        <ImageView
                android:src="@drawable/kenny_mccormick"
                android:layout_width="100dp"
                android:layout_height="100dp" android:id="@+id/image6" android:layout_row="2"
                android:layout_column="0" android:layout_marginLeft="20dp" android:layout_marginRight="15dp"
                android:background="@drawable/border" android:layout_marginTop="2dp"/>
        <ImageView
                android:src="@drawable/kenny_mccormick"
                android:layout_width="100dp"
                android:layout_height="100dp" android:id="@+id/image7" android:layout_row="2"
                android:layout_column="1" android:layout_marginRight="15dp" android:layout_marginLeft="15dp"
                android:background="@drawable/border" android:layout_marginBottom="2dp" android:layout_marginTop="2dp"/>
        <ImageView
                android:src="@drawable/kenny_mccormick"
                android:layout_width="100dp"
                android:layout_height="100dp" android:id="@+id/image8" android:layout_row="2"
                android:layout_column="2" android:layout_marginRight="15dp" android:layout_marginLeft="10dp"
                android:background="@drawable/border" android:layout_marginBottom="2dp" android:layout_marginTop="2dp"/>
        <ImageView
                android:src="@drawable/kenny_mccormick"
                android:layout_width="100dp"
                android:layout_height="100dp" android:id="@+id/image2" android:layout_column="2"
                android:layout_row="0" android:layout_marginRight="20dp" android:layout_marginLeft="10dp"
                android:background="@drawable/border" android:layout_marginBottom="2dp"/>
        <ImageView
                android:src="@drawable/kenny_mccormick"
                android:layout_width="100dp"
                android:layout_height="100dp" android:id="@+id/image1" android:layout_column="1"
                android:layout_row="0" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"
                android:background="@drawable/border" android:layout_marginBottom="2dp"/>
        <ImageView
                android:src="@drawable/kenny_mccormick"
                android:layout_width="100dp"
                android:layout_height="100dp" android:id="@+id/image0" android:layout_row="0"
                android:layout_column="0" android:layout_marginLeft="20dp" android:layout_marginRight="15dp"
                android:background="@drawable/border" android:layout_marginBottom="2dp"/>
    </GridLayout>
    <Button
            android:text="@string/start"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/startButton"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.497"
            android:background="@drawable/custom_rectangle_button" android:textColor="@color/colorWhite"
    />
</android.support.constraint.ConstraintLayout>